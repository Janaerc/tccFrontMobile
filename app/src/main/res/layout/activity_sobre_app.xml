<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SobreApp">


    <ImageView
        android:id="@+id/imagemufprSobre"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/ufpr_primeiroacesso"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        />

    <ImageView
        android:id="@+id/closebutton2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        />


    <TextView
        android:id="@+id/sobre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:text="Sobre"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imagemufprSobre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPoliticaPrivacidade"
        style="@style/Button_sobre"
        android:onClick="mostrarPolitica"
        android:text="Poítica de Privacidade"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/imagemufprSobre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableRight="@drawable/seta"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonTermosdeUso"
        style="@style/Button_sobre"
        android:onClick="mostrarTermos"
        android:text="Termos de Uso"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPoliticaPrivacidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableRight="@drawable/seta"
        />

    <TextView
        android:id="@+id/textoSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As informações contidas neste aplicativo são resposabilidade dos administradores"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>