<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PrimeiroAcesso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">



        <TextView
            android:id="@+id/primeiro_ac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="Primeiro Acesso"
            android:textAlignment="center"
            android:textColor="#FFC200"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:layout_weight="1"
            android:inputType="text"
            android:text="Seu nome" />

        <EditText
            android:id="@+id/editTextCpf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="1"
            android:inputType="text"
            android:text="Seu CPF" />

        <EditText
            android:id="@+id/editTextTelefone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="1"
            android:inputType="text"
            android:text="Seu Telefone" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Seu Email" />


        <TextView
            android:id="@+id/primeiro_ac3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:text="Sua Senha"
            android:textSize="15sp"
            android:textStyle="bold" />




        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="1"

            android:ems="10"
            android:inputType="textPassword"
            />


        <TextView
            android:id="@+id/primeiro_ac2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:text="Confirme Sua Senha"
            android:textSize="15sp"
            android:textStyle="bold" />




        <EditText
            android:id="@+id/editTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/buttonSalvarCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:backgroundTint="#FFC200"
            android:onClick="salvarCadastro"
            android:text="Salvar"
            android:textColor="#0160B6"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="20sp" />


        />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>